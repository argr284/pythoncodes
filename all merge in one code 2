import pandas as pd

# ðŸ”¹ Left DataFrame
left = pd.DataFrame({
    'cust_id': [1, 2, 3],
    'name': ['Gaurav', 'Amit', 'Neha']
})

# ðŸ”¹ Right DataFrame
right = pd.DataFrame({
    'customer_id': [2, 3, 4],
    'city': ['Delhi', 'Mumbai', 'Chennai']
})

# ðŸ”¸ Merge on different column names with indicator
merged = pd.merge(
    left,
    right,
    left_on='cust_id',
    right_on='customer_id',
    how='outer',
    indicator=True
)

# ðŸ”¸ Add match flag column
merged['match_flag'] = merged['_merge'] == 'both'

print(merged)

# âœ… Output:

#    cust_id    name  customer_id     city     _merge  match_flag
# 0      1.0  Gaurav          NaN      NaN  left_only       False
# 1      2.0    Amit          2.0    Delhi       both        True
# 2      3.0    Neha          3.0   Mumbai       both        True
# 3      NaN     NaN          4.0  Chennai  right_only      False